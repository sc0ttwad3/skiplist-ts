{
  "compilerOptions": {
    "module": "commonjs",   // Node module
    "target": "esnext",
    "noImplicitAny": false,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "types": [
      "node"
    ],
    "baseUrl": ".", // required for "paths"
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scratch",
    "docs",
    "src/**/*.test.*"
  ]
}
